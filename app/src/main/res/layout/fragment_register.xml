<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.tarlad.client.ui.views.auth.AuthViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="64dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginEnd="12dp"
                android:ems="10"
                android:text="@={vm.registerEmail}"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/editText" />


            <ImageView
                android:id="@+id/email_status"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:src="@drawable/ic_done"
                android:tint="@color/green"
                android:visibility="@{vm.emailStatus ? View.VISIBLE : View.GONE}"/>

            <ProgressBar
                android:id="@+id/email_progress"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:visibility="@{vm.emailProgress ? View.VISIBLE : View.GONE}"/>


        </LinearLayout>

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:text="@={vm.registerPassword}"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/editText" />

        <EditText
            android:id="@+id/edit_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:text="@={vm.registerConfirmPassword}"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/editText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text">

            <EditText
                android:id="@+id/edit_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginEnd="12dp"
                android:ems="10"
                android:text="@={vm.registerNickname}"
                android:hint="@string/nickname"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/editText" />

            <ImageView
                android:id="@+id/nickname_status"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:src="@drawable/ic_done"
                android:tint="@color/green"
                android:visibility="@{vm.nicknameStatus ? View.VISIBLE : View.GONE}"/>

            <ProgressBar
                android:id="@+id/nickname_progress"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:visibility="@{vm.nicknameProgress ? View.VISIBLE : View.GONE}"/>

        </LinearLayout>

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:text="@={vm.registerName}"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/editText" />

        <EditText
            android:id="@+id/edit_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:text="@={vm.registerSurname}"
            android:hint="@string/surname"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/editText" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/button"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/register"
            android:onClick="@{(v) -> vm.register()}"/>

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/login"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:onClick="@{(v) -> vm.switchToLogin()}"/>
    </LinearLayout>

</layout>
